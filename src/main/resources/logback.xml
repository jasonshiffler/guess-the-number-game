<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread][%-5level] %logger{60} - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="com.shiffler" level="DEBUG"/>

    <!--This logger allows us to see what Spring is doing in the background
    <logger name="org.springframework" level="DEBUG"/>
-->


    <root level="INFO">

        <appender-ref ref="STDOUT"/>

    </root>

</configuration>